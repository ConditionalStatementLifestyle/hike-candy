<!DOCTYPE html>
<html>

  <head>
    <title class="fa fa-tree">Hike Candy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>

      <div class="navbar">
        <a style="margin-right: -2%"><%= link_to "Posts", posts_path%> </a>
        <a style="margin-left: -30%"><%= link_to "Trips", trips_path%> </a>
        <% if logged_in? %>
            <div style="float: left;"><%= "Current User: #{session[:username]}"%></div>
            <div style="float: right;"><%= link_to 'Logout', logout_path, {class: 'item', method: 'delete'} %></div>
          <% end %>
      </div>
      <hr>

      <div id="tree"><h1 class="fa fa-tree">Hike Candy</h1></div>

    <%= yield %>
  </body>

</html>
