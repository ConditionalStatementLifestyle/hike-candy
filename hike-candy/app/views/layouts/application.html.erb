<!DOCTYPE html>
<html>

  <head>
    <title class="fa fa-tree">Hike Candy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>

      <div class='navbar'>
        <div style='color: white;'><%= link_to "Posts", posts_path%> </div>
      </div>

      <div id="tree"><h1 class="fa fa-tree">Hike Candy</h1></div>

        <div class="right menu">
          <% if logged_in? %>
              <button class="logout"><%= link_to 'Logout', logout_path, {class: 'item', method: 'delete'} %></button>
            <% else %>
              <%= link_to 'Create a New Account', signup_path, {class: 'item'} %>
              <%= link_to 'Login', login_path, {class: 'item'} %>
            <% end %>
          </div>

    <%= yield %>
  </body>

</html>
