<div class='backgroundbox'>
<div class='font'>
<h1>@<%=@follow.username%></h1>

<text>Following <%= link_to "(#{@followingcount})", follow_path(@follow) %> ---
<text>Followers <%= link_to "(#{@followercount})", follow_path(@follow) %></text>
<%= render 'relationships/follow', locals: {follow: @follow, user: @user} %>

<h1><%= "Latest Trips" %></h1>
  <% @trips.each do |t| %>
  <text>---------------------------------</text>
      <h3><%= t.title %> - <%= "Rating: " + "#{t.rating}" %></h3> <%=link_to "Read the Full Trip", trip_path(t)%><br><br>
  <% end %>
  <br>
<h1><%= "Latest Posts" %></h1>
  <% @posts.each do |p| %>
  <text>---------------------------------</text>
      <h3><%= p.title %></h3>
      <%= p.description.truncate_words(4) %><br>
      <%=link_to "Read the Full Post", post_path(p)%>
  <% end %>
  <br>
  <br>
</div>
</div>
